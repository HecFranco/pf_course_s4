{% extends 'base.html.twig' %}
{% block title %}{{'Calculator'|trans}}{% endblock %}
{% block section %}
	<!-- Content
	============================================= -->
	<section id="content">    
		<div class="content-wrap nopadding">
			<div class="section nomargin nobg clearfix">
				<div class="container-fluid clearfix">
                	<div class="heading-block bottommargin nobottomborder center">
						<h3>{{"Select Your Services"|trans}}</h3>
					</div>
                    <!-- Shop
                    ============================================= -->
                    <div class="row clearfix">                        
                        {% for typeProject in listTypeProject %}
                            <!-- Shop - {{typeProject.id}}
                            ============================================= -->
                            <div class="col-sm-4 col-12 product showcase-section clearfix" onclick="sendForm({{typeProject.id}})">
                                <div class="showcase-target-images">
                                    <img 
                                        class="showcase-target" 
                                        type="image" 
                                        required="required" 
                                        data-value="{{typeProject.id}}"
                                        src="{{asset(typeProject.image)}}"
                                        style="width:100%; height:100%;"
                                    >
                                </div>
                                <div class="product-desc list-inline center">
                                    <div class="product-title mt-2">
                                        <h3>{{typeProject.name}}</h3>
                                    </div>
                                    <div class="product-price">{{typeProject.basePrice|number_format(2, ',', '.')}} â‚¬</div>
                                </div>
                            </div>
                        {% endfor %}
                        <div style="display:none;">
                            {{ form_start(form)}}
                                {{ form_widget(form) }}
                                <button class="btn">{{ button_label|default('Save') }}</button>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        function sendForm(id){
            document.getElementById('budgets_typeProject_'+id).checked = true;
            document.forms["budgets"].submit();
        }
    </script>
{% endblock %}